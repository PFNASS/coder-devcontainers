{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
                "settings": {},
                "extensions": [
			        "streetsidesoftware.code-spell-checker",
                    "ms-python.python",
                    "ms-python.debugpy",
                    "KevinRose.vsc-python-indent",
                    "donjayamanne.python-extension-pack",
                    "danields761.dracula-theme-from-intellij-pythoned",
                    "redhat.vscode-yaml",
                    "esbenp.prettier-vscode",
                    "MagnoNMatos.crewai-snippets",
                    "WilliamSimmonds.crewai-lint"
                ]
         }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:1": {
            "version": "latest",
	    "moby": false
        },
        "ghcr.io/devcontainers/features/git:1": {
                "version": "latest"
        },
        "ghcr.io/devcontainers/features/python:1": {
            "version": "latest"
        }
    },
    "onCreateCommand": "/on-create.sh",
    "postCreateCommand": "pip3 install pyyaml crewai && crewai create crew testCrew && cd testCrew"
}
